# API settings
API_TITLE=Building Footprint Extraction API
API_DESCRIPTION=API for extracting building footprints from satellite imagery
API_VERSION=1.0.0
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_HEADERS=["*"]
MAX_CONCURRENT_JOBS=4

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database settings
MONGODB_URL=mongodb://username:password@mongodb:27017/building_footprint_db?authSource=admin
MONGODB_NAME=building_footprint_db
MONGODB_USERNAME=username
MONGODB_PASSWORD=password

# Redis settings
REDIS_URL=redis://redis:6379/0
RESULT_TTL=86400  # 24 hours in seconds

# Google Maps API
MAPS_API_KEY=your-google-maps-api-key

# File paths
MODEL_PATH=./models
LOG_DIR=./logs
TEMP_DIR=./temp
DATA_DIR=./data